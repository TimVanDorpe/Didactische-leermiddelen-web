@using Groep9.NET.Models.Domein
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Didactische leermiddelen</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/Content/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/Content/images/favicon.ico" type="image/x-icon">
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               

                <a class="navbar-brand" href="/" contenteditable="false"> Didactische Leermiddelen</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Catalogus", "Index", "Catalogus")</li>
                    <li>@Html.ActionLink("Verlanglijst", "Verlanglijst", "Catalogus")</li>
                    @*<li>@Html.ActionLink("Reservaties", "Index", "Reservatie")</li>*@
                </ul>
                <div class="navbar-right nav-rechts">
                    @if (Request.IsAuthenticated)
                {
                       
                    // toont de naam (momenteel == email) van de momenteel ingelogde user
                    @User.Identity.Name
                    <span>&nbsp; | &nbsp;</span>
                        
                    }
                    @if (Request.IsAuthenticated)
                    {
                        <a href="/account/Logout" >Uitloggen</a>
                    }
                    else
                    {

                        <a href="/account/LogIn" >Inloggen</a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (Request.IsAuthenticated)
            {
                <p>
                    Ingelogd als: @User.Identity.Name - <a href="@Url.Action("logout", "account")">Uitloggen</a>
                </p>
            }

            <p>&copy; 2016 - Hogent Didactische leermiddelen</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/custom.js")" type="text/javascript"></script>

    @section scripts
{
        <script type="text/javascript">


        $(document).ready(function() {
            event.preventDefault();
            // Connect to 'change' event in order to toggle glyphs

            if ($('.toggle').prop('checked')) {
                $('.verlanglijstglyp').prev().removeClass('glyphicon-ok-circle');
                $('.verlanglijstglyp').prev().addClass('glyphicon-unchecked');
                $('.verlanglijstglyp').prev().addClass('btn-danger');
                $('.verlanglijstglyp').prev().removeClass('groen');
            } else {
                $('.verlanglijstglyp').prev().addClass('glyphicon-ok-circle');
                $('.verlanglijstglyp').prev().removeClass('glyphicon-unchecked');
                $('.verlanglijstglyp').prev().addClass('groen');
                $('.verlanglijstglyp').prev().removeClass('btn-danger');
            }

        });
        </script>
    }
</body>
</html>
