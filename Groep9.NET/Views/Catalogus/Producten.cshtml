@using Groep9.NET.Controllers
@using Groep9.NET.Models.Domein
@model IEnumerable<Groep9.NET.ViewModels.ProductViewModel>

    


<div class="hidden-sm hidden-xs">
    <table class="table table-responsive ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Plaats)
            </th>
                  
            <th></th>
        </tr>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7">Er zijn geen materialen gevonden die voldoen aan de zoekcriteria.</td>
            </tr>

        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="~/Content/images/@(@Html.DisplayFor(modelItem =>item.Foto))" data-lightbox="image-@item.ProductId" data-title="@Html.DisplayFor(modelItem => item.Naam)">
                       
                        <img style="width: 75px; height: 75px;" alt="@Html.DisplayFor(modelItem => item.Naam)" src="~/Content/images/@(@Html.DisplayFor(modelItem =>item.Foto))" />
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Plaats)
                </td>
              
                <td>
                    <div class="pull-right" style="min-width:168px" role="toolbar">
                        <a href="@Url.Action("Details", new {id = item.ProductId})" class="btn btn-info btn-sm ">

                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
                        </a>
                        @if (!item.InVerlanglijst)
                        {
                            <label class="btn groen verlanglijstlabel" style="width:130px;">

                                <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                                @{
                                    var url = Url.Action("AddOfVerwijderVerlanglijst", new {id = item.ProductId});
                                }
                                @Html.CheckBoxFor(modelItem => item.InVerlanglijst, new {id = item.ProductId, onclick = "window.location = '" + url + "'", @class = "toggle"})

                                Toevoegen



                            </label>
                                    }
                                    else
                                    {
                                        <label class="btn btn-default verlanglijstlabel" style="width:130px;">

                                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                            @{
                                                var url = Url.Action("AddOfVerwijderVerlanglijst", new { id = item.ProductId });
                                            }
                                            @Html.CheckBoxFor(modelItem => item.InVerlanglijst, new { id = item.ProductId, onclick = "window.location = '" + url + "'", @class = "toggle" })

                                            In verlanglijst



                                        </label>
                           }



                        </div>
</td>
            </tr>
        }

    </table>
</div>
<div class="visible-sm visible-xs">
    @if (!Model.Any())
    {

        <h4>Geen producten gevonden</h4>

    }
    @foreach (var item in Model)
    {
        

        <div class="row ">

            <div class="col-xs-12 product-small">
                <div class="foto col-xs-4">
                    <img alt="@Html.DisplayFor(modelItem => item.Naam)" src="~/Content/images/@(@Html.DisplayFor(modelItem =>item.Foto))" class="img-responsive"/>
                </div>
                
                <div class="caption col-xs-8">
                    <h2>@Html.DisplayFor(modelItem => item.Naam) 
                       
                </h2> 
                   
                    <p>@Html.DisplayFor(modelItem => item.Omschrijving)</p>
                   
                    <span class="pull-left">@Html.ActionLink("Details", "Details", new {id = item.ProductId })</span><span class="pull-right"><div class="pull-right" style="min-width:168px" role="toolbar">
    <a href="@Url.Action("Details", new {id = item.ProductId})" class="btn btn-info btn-sm ">

        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
</a>
        @if (!item.InVerlanglijst)
        {
            <label class="btn groen verlanglijstlabel" style="width:130px;">

                <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                @{
                    var url = Url.Action("AddOfVerwijderVerlanglijst", new { id = item.ProductId });
                }
                @Html.CheckBoxFor(modelItem => item.InVerlanglijst, new { id = item.ProductId, onclick = "window.location = '" + url + "'", @class = "toggle" })

                Toevoegen



            </label>
                    }
                    else
                    {
                        <label class="btn btn-default verlanglijstlabel" style="width:130px;">

                            <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                            @{
                                var url = Url.Action("AddOfVerwijderVerlanglijst", new { id = item.ProductId });
                            }
                            @Html.CheckBoxFor(modelItem => item.InVerlanglijst, new { id = item.ProductId, onclick = "window.location = '" + url + "'", @class = "toggle" })

                            In verlanglijst



                        </label>
                                }
</div></span>
                </div>
            </div>
            <br />
        </div>
        
    }
            </div>
